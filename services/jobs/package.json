{
  "name": "@sustainovate/jobs",
  "version": "1.0.0",
  "description": "Background job processing service for Sustainovate platform",
  "type": "module",
  "main": "dist/worker.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch --clear-screen=false src/worker.ts",
    "start": "node dist/worker.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@sustainovate/shared": "*",
    "amqplib": "^0.10.8"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
