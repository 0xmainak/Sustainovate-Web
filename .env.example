# Server Configuration
NODE_ENV=development
PORT=4000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sustainovate
MONGODB_URI=mongodb://localhost:27017/sustainovate

# Redis Configuration
REDIS_URL=redis://localhost:6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Authentication
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_here_change_this_in_production

# Discord OAuth Configuration
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=http://localhost:4000/auth/discord/callback
DISCORD_BOT_TOKEN=your_discord_bot_token

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:4000/auth/github/callback

# Admin Configuration (Discord User IDs - comma separated)
ADMIN_DISCORD_IDS=123456789012345678,987654321098765432

# Frontend URL
FRONTEND_URL=http://localhost:3000

# External APIs (add as needed)
# EMAIL_API_KEY=
# SMS_API_KEY=

# Development
DEBUG=sustainovate:*